{
  "compilerOptions": {
    "lib": ["ES2022"],
    "pretty": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", "*.test.ts", "**/*.spec.ts", "*.js", "dist"]
}
