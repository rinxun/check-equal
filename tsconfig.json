{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2022",
    "lib": ["ESNext"],
    "pretty": true,
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", "*.test.ts", "**/*.spec.ts", "*.js", "dist"]
}
